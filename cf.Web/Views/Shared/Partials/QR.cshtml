    }
    else
    {
        <h4><img alt="QR Code" src="@Stgs.StaticRt/ui/icon-qr-28x28.png"> Scan QR Codes with <a href="/mobile">Climbfind Mobile</a>!</h4>
    
            <p><i>Try it now:</i></p>  
